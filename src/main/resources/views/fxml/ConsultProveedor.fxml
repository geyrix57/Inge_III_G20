<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.input.KeyCodeCombination?>
<?import javafx.scene.layout.*?>
<BorderPane styleClass="grid" stylesheets="@../styles/default.css" xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.gadroves.gsisinve.controller.ConsultProveedorController">
    <top>
        <MenuBar BorderPane.alignment="CENTER">
            <menus>
                <Menu mnemonicParsing="false" text="Archivo">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#cargarDatos" text="Actualizar">
                            <accelerator>
                                <KeyCodeCombination alt="UP" code="F5" control="DOWN" meta="UP" shift="UP"
                                                    shortcut="UP"/>
                            </accelerator>
                        </MenuItem>
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Editar">
                    <items>
                        <MenuItem mnemonicParsing="false" text="Delete"/>
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Ayuda">
                    <items>
                        <MenuItem mnemonicParsing="false" text="?"/>
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </top>
    <center>
        <VBox spacing="25.0" BorderPane.alignment="CENTER">
            <children>
                <HBox alignment="CENTER">
                    <children>
                        <Label text="Tabla Proveedores"/>
                    </children>
                </HBox>
                <HBox alignment="CENTER" spacing="10.0">
                    <children>
                        <Label text="Buscar:"/>
                        <TextField fx:id="Tf_buscar" prefHeight="25.0" prefWidth="239.0" promptText="Proveedor"/>
                    </children>
                </HBox>
                <TableView fx:id="Tb_InfoProveedor">
                    <columns>
                        <TableColumn fx:id="Col_codigo" prefWidth="119.0" text="Código"/>
                        <TableColumn fx:id="Col_nombre" prefWidth="159.0" text="Nombre"/>
                        <TableColumn fx:id="Col_direccion" prefWidth="298.0" text="Dirección"/>
                        <TableColumn fx:id="Col_estado" prefWidth="163.0" text="Activo"/>
                    </columns>
                </TableView>
            </children>
            <BorderPane.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </BorderPane.margin>
        </VBox>
    </center>
</BorderPane>
