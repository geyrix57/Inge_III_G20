<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.input.KeyCodeCombination?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>
<BorderPane styleClass="grid" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.gadroves.gsisinve.controller.StockController">
    <stylesheets>
        <URL value="@../styles/default.css"/>
    </stylesheets>

    <top>
        <MenuBar BorderPane.alignment="CENTER">
            <menus>
                <Menu mnemonicParsing="false" text="Archivo">
                    <items>
                        <MenuItem mnemonicParsing="false" text="Actualizar">
                            <accelerator>
                                <KeyCodeCombination alt="UP" code="F5" control="DOWN" meta="UP" shift="UP"
                                                    shortcut="UP"/>
                            </accelerator>
                        </MenuItem>
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Editar">
                    <items>
                        <MenuItem mnemonicParsing="false" text="Eliminar"/>
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Ayuda">
                    <items>
                        <MenuItem mnemonicParsing="false" text="About"/>
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </top>
    <center>
        <VBox spacing="15.0" BorderPane.alignment="CENTER">
            <children>
                <HBox spacing="15.0" styleClass="grid">
                    <children>
                        <Label text="Buscar:"/>
                        <TextField promptText="Articulo"/>
                    </children>
                    <padding>
                        <Insets bottom="15.0" left="200.0" right="200.0" top="15.0"/>
                    </padding>
                </HBox>
                <TableView>
                    <columns>
                        <TableColumn prefWidth="104.0" text="Código"/>
                        <TableColumn prefWidth="221.0" text="Descripción"/>
                        <TableColumn minWidth="1.0" prefWidth="75.0" text="Costo"/>
                        <TableColumn prefWidth="81.0" text="Utilidad"/>
                        <TableColumn prefWidth="72.0" text="Gravamen"/>
                        <TableColumn prefWidth="53.0" text="Activo"/>
                    </columns>
                </TableView>
            </children>
            <BorderPane.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </BorderPane.margin>
        </VBox>
    </center>
</BorderPane>
